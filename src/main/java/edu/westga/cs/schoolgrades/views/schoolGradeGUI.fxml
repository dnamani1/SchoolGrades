<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE VBox [ ]>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane
	fx:controller="edu.westga.cs.schoolgrades.controllers.GradesController"
	maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
	minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
	xmlns="http://javafx.com/javafx/20.0.1"
	xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Data">
					<items>
						<MenuItem mnemonicParsing="false"
							onAction="#onAddQuizMenuItemClick" text="Add quiz" />
						<MenuItem mnemonicParsing="false"
							onAction="#onAddHomeworkMenuItemClick" text="Add homework" />
						<MenuItem mnemonicParsing="false"
							onAction="#onAddExamMenuItemClick" text="Add exam" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<HBox prefHeight="313.0" prefWidth="455.0" spacing="10.0"
			BorderPane.alignment="CENTER">
			<children>
				<VBox prefHeight="355.0" prefWidth="289.0">
					<children>
						<Label lineSpacing="10.0" text="Quizzes" />
						<ListView fx:id="quizzesListView" editable="true"
							prefHeight="201.0" prefWidth="148.0">
							<contextMenu>
								<ContextMenu>
									<items>
										<MenuItem mnemonicParsing="false"
											onAction="#onAddQuizMenuItemClick" text="Add quiz" />
									</items>
								</ContextMenu>
							</contextMenu>
							<tooltip>
								<Tooltip text="Grade Column" />
							</tooltip>
						</ListView>
						<Label contentDisplay="BOTTOM" text="Quiz Subtotal">
							<padding>
								<Insets bottom="10.0" right="10.0" top="10.0" />
							</padding>
						</Label>
						<TextField fx:id="quizSubtotalTextField">
							<tooltip>
								<Tooltip text="Quiz subtotal" />
							</tooltip>
						</TextField>
					</children>
				</VBox>
				<VBox prefHeight="355.0" prefWidth="333.0">
					<children>
						<Label text="Homeworks" />
						<ListView fx:id="homeworkListView" editable="true"
							prefHeight="200.0" prefWidth="281.0">
							<contextMenu>
								<ContextMenu>
									<items>
										<MenuItem mnemonicParsing="false"
											onAction="#onAddHomeworkMenuItemClick" text="add homework" />
									</items>
								</ContextMenu>
							</contextMenu>
							<tooltip>
								<Tooltip text="Homework grades Column" />
							</tooltip>
						</ListView>
						<Label contentDisplay="BOTTOM" lineSpacing="10.0"
							text="HW Subtotal">
							<opaqueInsets>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</opaqueInsets>
							<VBox.margin>
								<Insets />
							</VBox.margin>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</Label>
						<TextField fx:id="homeworkSubtotalTextField"
							prefWidth="333.0">
							<padding>
								<Insets top="10.0" />
							</padding>
						</TextField>
					</children>
				</VBox>
				<VBox prefHeight="355.0" prefWidth="299.0">
					<children>
						<Label text="Exam" />
						<ListView fx:id="examsListView" editable="true"
							prefHeight="200.0" prefWidth="155.0">
							<contextMenu>
								<ContextMenu>
									<items>
										<MenuItem mnemonicParsing="false"
											onAction="#onAddExamMenuItemClick" text="add exam" />
									</items>
								</ContextMenu>
							</contextMenu>
							<tooltip>
								<Tooltip text="Exam grades column" />
							</tooltip>
						</ListView>
						<Label contentDisplay="BOTTOM" lineSpacing="10.0"
							text="Exam Subtotal">
							<padding>
								<Insets bottom="10.0" right="10.0" top="10.0" />
							</padding>
						</Label>
						<TextField fx:id="examSubtotalTextField">
							<tooltip>
								<Tooltip text="Exam subtotal" />
							</tooltip>
						</TextField>
					</children>
				</VBox>
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</HBox>
	</center>
	<bottom>
		<HBox alignment="CENTER_LEFT" prefHeight="72.0" prefWidth="600.0"
			spacing="10.0" BorderPane.alignment="CENTER">
			<children>
				<Label contentDisplay="RIGHT" text="Final Grade:">
					<padding>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</padding>
				</Label>
				<TextField fx:id="finalGradeTextField" prefHeight="25.0"
					prefWidth="309.0">
					<tooltip>
						<Tooltip text="Final grade" />
					</tooltip>
				</TextField>
				<Button fx:id="recalculateButton" mnemonicParsing="false"
					onAction="#onRecalculateButtonClick" prefHeight="25.0"
					prefWidth="177.0" text="Recalculate" />
			</children>
			<padding>
				<Insets bottom="10.0" right="10.0" top="10.0" />
			</padding>
		</HBox>
	</bottom>
</BorderPane>
